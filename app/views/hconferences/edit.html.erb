<% provide(:title, "Edit conference") %>
<h1>Update Conference</h1>

<div class="row">
  <div class="form">
    <%= form_for(@hconference) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <div class="form_line">
            <%= f.label :number %>
            <%= f.text_field :number %>
        </div>

        <div class="form_line">
            <%= f.label :season %>
            <%= f.text_field :season %>
        </div>


        <div class="form_line">
            <%= f.label :year %>
            <%= f.text_field :year %>
        </div>

        <div class="form_line">
            <%= f.label :date %>
            <%= f.text_field :date %>
        </div>

        <div class="form_line">
            <%= f.label :location %>
            <%= f.text_field :location %>
        </div>

        <div class="form_line">
            <%= f.label :early_price, "Early Price" %>
            $<%= f.text_field :early_price %>
        </div>

        <div class="form_line">
            <%= f.label :early_date, "Early Price Deadline" %>
            Before: <%= f.text_field :early_date %>
        </div>

        <div class="form_line">
            <%= f.label :normal_price, "Normal Price" %>
            $<%= f.text_field :normal_price %>
        </div>


        <div class="form_line">
            <%= f.label :normal_date, "Normal Price Deadline" %>
            Before: <%= f.text_field :normal_date %>
        </div>

        <div class="form_line">
          <%= f.label :late_price, "Late Price" %>
          $<%= f.text_field :late_price %>
        </div>


        <div class="form_line">
          <%= f.label :late_date, "Late Price Deadline" %>
          Before: <%= f.text_field :late_date %>
        </div>

        <div class="form_line">
          <%= f.label :delegation_fee, "Delegation Fee" %>
          $<%= f.text_field :delegation_fee %>
        </div>

        <%= f.submit "Update Conference", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>