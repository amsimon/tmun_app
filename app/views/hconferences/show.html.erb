<% provide(:title, "dsfdsf") %>

<%= render 'tmun_conf_head' %>

<!--
render season, year here
-->

<h2 id="season"><%= @hconference.season %> <%= @hconference.year %></h2>


<div class="conf_cont">

  <div id="buttonBox">

    <%= link_to (conf_path(@hconference)) do %>
        <div class="current button">Overview</div>
    <% end %>

    <%= link_to (conf_button_path( "committees", @hconference )) do %>
        <div class="button">Committees</div>
    <% end %>

    <%= link_to (conf_button_path( "speakers", @hconference )) do %>
        <div class="button">Speakers</div>
    <% end %>

    <%= link_to (conf_button_path( "research", @hconference )) do %>
        <div class="button">Research</div>
    <% end %>

    <%= link_to (conf_button_path( "position_papers", @hconference )) do %>
        <div class="button">Position Papers</div>
    <% end %>

    <%= link_to (conf_button_path( "register", @hconference )) do %>
        <div class="button" id="register">Register</div>
    <% end %>

  </div>

  <% if signed_in? %>
          <!-- Admin viewing others' -->
          <% if current_user.admin? %>

              | <%= link_to "Admin: edit conf details", conf_path(@hconference) + "/edit"%>
          <% end %>
  <% end %>

  <div class="outer">
    <div class="innerBox" >

      <h2><span>Information</span></h2>
      <div class="infosBox">
        <div class="infos" >
        <ul>
            <li><div class="label">Date: </div>
              <div class="info"><%= @hconference.date %> </div></li>

            <li><div class="label">Location: </div>
              <div class="info"><%= @hconference.location %></div></li>

          <li><div class="label">Delegation Fee: </div>
            <div class="info">$<%= @hconference.delegation_fee %>
            </div></li>

            <li><div class="label">Early: </div>
              <div class="info">$<%= @hconference.early_price %> / delegate  (before <%= @hconference.early_date %>) </div></li>

            <li><div class="label">Regular: </div>
              <div class="info">$<%= @hconference.normal_price %> / delegate (before <%= @hconference.normal_date %>)</div></li>

          <li><div class="label">Late: </div>
            <div class="info">$<%= @hconference.late_price %> / delegate (before <%= @hconference.late_date %>)
            </div></li>


        </ul>
    </div>
        <br><br><br>
      </div>
    </div>

    <div class="innerBox">
      <h2><span>Deadlines</span></h2>
      <div class="infosBox">
        <div class="infos" >
          <ul>
            <li><div class="label date">June 10, 2014</div>
              <div class="info">Early registration deadline to postmark payment.</div></li>

            <li><div class="label date">August 10, 2014</div>
              <div class="info">Regular registration deadline to postmark payment.</div></li>

            <li><div class="label date">September 10, 2014</div>
              <div class="info">Late registration deadline to postmark payment.</div></li>

            <li><div class="label date">October 19, 2014</div>
              <div class="info">Position papers due at 11:59 pm PST.</div></li>
          </ul>
        </div>
      </div>
    </div>


  </div>
  <div class="outer">
    <div class="innerBox" >
      <h2><span>FAQ</span></h2>
      <% if @hconference.questions.any? %>
          <ol class="questions">
            <%= render @questions %>
          </ol>
          <%= will_paginate @questions %>
      <% end %>
      <div id="letter">
        <p style="text-align:center;">
          Coming soon!
        </p>
      </div>
      <br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>
      <br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>

    </div>

    <div class="innerBox" >
      <h2><span>Schedule</span></h2>
      <table class="sched">
        <caption>Saturday, November 1st</caption>
        <tr class="sched">
          <td class="left">8:00 am - 9:00 am</td>
          <td class="right">Check In</td>
        </tr>

        <tr class="sched">
          <td class="left">9:00 am - 9:30 am</td>
          <td class="right">Opening Ceremony</td>
        </tr>

        <tr class="sched">
          <td class="left">9:45 am - 12:30 pm</td>
          <td class="right">Session I</td>
        </tr>

        <tr class="sched">
          <td class="left">12:30 pm - 1:45 pm</td>
          <td class="right">Lunch</td>
        </tr>

        <tr class="sched">
          <td class="left">1:45 pm - 3:30 pm</td>
          <td class="right">Session II</td>
        </tr>

        <tr class="sched">
          <td class="left">4:00 pm - 4:30 pm</td>
          <td class="right">Closing Ceremony</td>
        </tr>

      </table>


    </div>



  </div>
</div>

