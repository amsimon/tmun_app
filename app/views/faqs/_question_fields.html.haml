.sub-module.module
  %table.q
    %tr
      %td
        = f.hidden_field :_destroy
        = link_to '#', class: "remove_fields admin-link" do
          .event-x
            &times;
      %td
        = f.label :content, "Question"
      %td
        = f.text_area :content
      %td
        = f.label :content, "Answer"
      %td
        = f.fields_for :answers do |builder|
          = render 'answer_fields', f: builder
