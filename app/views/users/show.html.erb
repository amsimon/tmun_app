<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
        <%= @user.role %>
      </h1>
    </section>

    <% if signed_in? %>
        <% if !current_user?(@user) %>
            <!-- Admin viewing others' -->
            <% if current_user.admin? %>

            | <%= link_to "Admin: edit user details", edit_user_path(@user)%>
            | <%= link_to "Admin: change user password", edit_user_path(@user)%>
            | <%= link_to "Admin: delete", @user, method: :delete,
                          data: { confirm: "You sure?" } %>
            <% end %>
            <!-- Admin's profile -->
            <% if @user.admin? %>
                <%= link_to "View all members", users_path %>
                <%= link_to "Create Home Conference", new_hconference_path %>
            <% end %>
        <% else %>
            <%= link_to "Edit account", edit_user_path(@user)%>
        <% end %>
    <% end %>
  </aside>
  
  <div class="span8">
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
</div>