<% provide(:title, "Edit user") %>
<h1 id="tritonmun"><span id="main">Update
  <% if current_user != @user %>
      user's
   <% else %>
      your
   <% end %>
  profile</span></h1>

<div class="narrow">


  <div class="even_more">
    <div class="forms">
      <%= form_for(@user) do |f| %>
          <%= render 'shared/error_messages', object: f.object %>

          <table>
            <tr>
              <td><%= f.label :name %></td>
              <td><%= f.text_field :name %></td>
            </tr>
            <tr>
              <td><%= f.label :email %></td>
              <td><%= f.text_field :email %></td>
            </tr>
            <tr>
              <td><%= f.label :password %></td>
              <td><%= f.password_field :password %></td>
            </tr>
            <tr>
              <td><%= f.label :password_confirmation, "Confirm" %></td>
              <td> <%= f.password_field :password_confirmation %></td>
            </tr>
            <tr>
              <td><%= f.label :major %></td>
              <td><%= f.text_field :major %></td>
            </tr>
            <tr>
              <td><%= f.label :grad_year %></td>
              <td><%= f.text_field :grad_year %></td>
            </tr>

            <% if signed_in? %>
                <!-- Admin viewing others' -->
                <% if current_user.admin? %>
                    <tr>
                      <td><%= f.label :travel_team, "Travel Team?" %></td>
                      <td><%= f.check_box :travel_team  %></td>
                    </tr>
                    <tr>
                      <td><%= f.label :travel_team, "Home Conference?" %></td>
                      <td><%= f.check_box :home_team  %></td>
                    </tr>

                    <tr>
                      <td><%= f.label :travel_team, "Secretariat?" %></td>
                      <td><%= f.check_box :secretariat %></td>
                    </tr>
                    <tr>
                      <td><%= f.label :travel_team, "Secretariat Position" %></td>
                      <td><%= f.text_field :sec_pos %></td>
                    </tr>
                <% end %>
            <% end %>

          </table>

          <br>
          <%= f.label :bio, "Tell us about yourself." %><br>
          <%= f.text_area :bio, :cols => 50, :rows => 10 %><br>
          <%= f.file_field :avatar %><br>
          <br>
          <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
      <% end %>
    </div>
  </div>
</div>