- if defined?(schedule)
  - if schedule.present?
    - if schedule.id != nil
      %table.branch-schedule
        %caption
          - if conf != "false"
            %span.name
              = schedule.name
            %br/
            - if schedule.date != nil
              %span.date
                = schedule.date.strftime("%A, %b %-d, %Y")
        %tr
          - if conf != "true"
            %th Date
          %th Time
          %th Activity
          %th Location
        = render partial: "shared/event", collection: schedule.events, locals: {conf: conf}

      - if signed_in?
        / Admin viewing others'
        - if current_user.admin?
          %span.admin
            = link_to "edit", [:edit, parent, schedule], class: "admin-link"
            = link_to "delete", schedule, method: :delete, data: { confirm: "You sure?" }, class: "admin-link"
